@model TodoClient.Models.TodoItem

@{
    ViewData["Title"] = "Удаление задачи";
}

<div class="container">
    <h1 class="mb-4">Удаление задачи</h1>

    <div class="alert alert-danger">
        <h4>Вы уверены, что хотите удалить эту задачу?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Priority)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Priority)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Deadline)</dt>
                <dd class="col-sm-9">@Model.Deadline.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsCompleted)</dt>
                <dd class="col-sm-9">
                    @if (Model.IsCompleted)
                    {
                        <span class="badge bg-success">Выполнено</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">В процессе</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Удалить
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </form>
        </div>
    </div>
</div> 